{
  "name": "expressjs",
  "version": "1.0.0",
  "description": "ExpressJS template",
  "main": "dist/index.js",
  "scripts": {
    "lint": "yarn run eslint src/** test/** --ext .js,.ts",
    "build": "yarn run lint && tsc",
    "prestart": "yarn run build",
    "dev": "nodemon --watch src -e ts --exec yarn run start",
    "start": "node .",
    "test": "mocha --require ts-node/register --recursive './test/**/*.{js,ts}' --exit"
  },
  "repository": "https://github.com/markotomcik/expressjs.git",
  "author": "Marko Tomčík <markotomcik@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^14.3.2",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.8",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^9.2.0",
    "supertest": "^6.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
